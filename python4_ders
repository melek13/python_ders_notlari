

import string 
import random 


sifre = input("Şifrenizi giriniz   :")
sayacbyk = 0
sayackck = 0
sayacnkta = 0
sayacrkm = 0

for i in sifre:
  sayacbyk += string.ascii_uppercase.count(i)
  sayackck += string.ascii_lowercase.count(i) 
  sayacnkta +=string.punctuation.count(i)
  sayacrkm +=string.digits.count(i)
  print("büyük harf",sayacbyk)  
  print("küçük harf",sayackck)    
  print("noktalama", sayacnkta)   
  print("rakamlar",sayacrkm)
 

##şifre öner

buyuk = string.ascii_uppercase
kucuk = string.ascii_lowercase
sayi = string.digits
noktalama = string.punctuation

sifre_son = ""

sifre = random.choice(buyuk) + random.choice(kucuk) + random.choice(noktalama) + random.choice (sayi)



for i in range(8):  
  sifre_son += random.choice(sifre)
  if any(i in buyuk for i in sifre) and any(i in kucuk for i in sifre) and any(i in sayi for i in sifre) and any(i in noktalama for i in sifre):
      
    print(sifre_son)



